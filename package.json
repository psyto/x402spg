{
  "name": "x402-serverless-payment-gateway",
  "version": "1.0.0",
  "description": "A lightweight middleware that enables pay-per-use monetization for serverless HTTP APIs using the x402 protocol on Solana",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "x402",
    "solana",
    "payment-gateway",
    "serverless",
    "api-monetization"
  ],
  "author": "Hiroyuki Saito",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "^2.6.11",
    "serverless-offline": "^13.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

